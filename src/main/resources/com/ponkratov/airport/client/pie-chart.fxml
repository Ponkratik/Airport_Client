<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="540.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ponkratov.airport.client.PieChartWindowController">
   <children>
      <Label fx:id="messageLabel" alignment="CENTER" layoutX="15.0" layoutY="510.0" prefWidth="930.0" text="Сообщение" />
      <PieChart fx:id="customPieChart" layoutX="30.0" layoutY="50.0" prefHeight="450.0" prefWidth="900.0" />
      <Label fx:id="menuHeaderLabel" layoutY="10.0" prefWidth="900.0" stylesheets="@styles/content-style.css" text="Распределение сотрудников по должностям">
         <padding>
            <Insets left="50.0" />
         </padding>
      </Label>
      <Button fx:id="closeButton" layoutX="920.0" mnemonicParsing="false" onAction="#onCloseButton" prefHeight="20.0" prefWidth="32.0" scaleX="0.5" scaleY="0.5" style="-fx-background-color: transparent;">
         <graphic>
            <ImageView>
               <image>
                  <Image url="@img/CloseButton.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
